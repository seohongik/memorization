import java.util.Scanner;

public class Ex23 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// 학사관리시스템(2)
		
		Scanner sc = new Scanner(System.in);
		String[] subject = {"국어", "영어", "수학"};
		
		System.out.print("학생 수를 입력해주세요 : ");
		int studentNum = sc.nextInt();
		
		int[][] studentScore = new int[studentNum][3];
		int[] sum = new int[studentNum];
		double[] avg = new double[studentNum];
		
		for(int i=0; i<studentScore.length; i++) {
			for(int j=0; j<studentScore[i].length; j++) {
				System.out.print((i+1)+"번째 학생의 "+subject[j]+"의 점수를 입력해주세요");
				studentScore[i][j] = sc.nextInt();
				sum[i] += studentScore[i][j];
			} avg[i] = (double) sum[i]/3;
		} 
		
		for(int k=0; k<studentScore.length; k++) {
			for(int l=0; l<studentScore[k].length; l++) {
				System.out.printf("%5d", studentScore[k][l]);
			} System.out.printf("%5d", sum[k]);
			  System.out.printf("%6.1f", avg[k]);
		}
		
		
			
		}
	}
