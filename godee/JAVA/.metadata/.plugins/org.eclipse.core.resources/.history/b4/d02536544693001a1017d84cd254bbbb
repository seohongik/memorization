
public class Ex18 {

 public static void main(String[] args) {
  // TODO Auto-generated method stub
  
  int [][] score = {
    {100,100,100},
    {20,20,20},
    {30,30,30},
    {40,40,40},
    {50,50,50}
  };

  String[] menu = {"번호","국어","영어","수학","총점","평균"};
  int deptSum[] = new int[3];
  
  //과목명 나열
  for(String str : menu) {
   System.out.printf("%5s",str);
  }
  System.out.println();
  System.out.println("========================================");
  for(int i=0;i<score.length;i++) {
   int sum=0;
   System.out.printf("%4d",i+1);
   for(int j=0;j<score[i].length;j++) {
    System.out.printf("%4d",score[i][j]);
    //개인 점수 합
    sum+=score[i][j];
    //각 과목 점수 합
    // 00 10 20 30 40 , 01 11 21 31 41 , 02 12 22 32 42 
    deptSum[j]+=score[i][j];
   }
   float avg = (float)sum/score[i].length;
   System.out.printf("%4d",sum);
   System.out.printf("%6.1f",avg);
   System.out.println();
  }
  System.out.println("========================================");
  System.out.print("총점 :");
  // 각 과목 총점 나열
  for(int a : deptSum) {
   System.out.printf("%4d",a);
  }

 }

}